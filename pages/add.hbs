<h1>Add new Course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required>
        <label for="title"> Name Courses</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>

    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required min=1>
        <label for="price"> Price Courses</label>
        <span class="helper-text" data-error="Enter price" ></span>
    </div>
    
    <div class="input-field">
        <input id="img" type="text" name="image" class="validate" required>
        <label for="img">URL Image</label>
        <span class="helper-text" data-error="wrong" data-success="Enter url image"></span>
    </div>

    <button class="btn btn-primary"> Add course</button>
</form>