<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a href="#login" class="active">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6 offset-s3">
            <h2>Enter in shop</h2>
            <form action="/auth/login" method="POST">
                <div class="input-field">
                    <input id="email" name="email" type="text" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="password" name="password" type="text" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>
                <button class="btn btn-primary" type="submit">Enter</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s3">
            <h2>Create an account</h2>
            <form action="/auth/register" method="POST">
                <div class="input-field">
                    <input id="reemail" name="email" type="text" class="validate" required>
                    <label for="reemail">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" name="password" type="text" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" name="confirm" type="text" class="validate" required>
                    <label for="confirm">The password again</label>
                    <span class="confirm-text" data-error="Enter password"></span>
                </div>

                <button class="btn btn-primary" type="submit">Register</button>
        </div>
    </div>
</div>